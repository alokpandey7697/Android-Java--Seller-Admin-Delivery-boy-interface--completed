<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ResetPasswordActivity">
    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"

        >
        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number..."
        android:background="@drawable/input_design"
        android:layout_below="@+id/relative123"
        android:padding="14dp"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security questions"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/find_phone_number"
        />

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Who is your super hero"
        android:background="@drawable/input_design"
        android:layout_below="@+id/title_question"
        android:padding="14dp"
        android:layout_margin="15dp"/>

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="what is your favourate game"
        android:background="@drawable/input_design"
        android:layout_below="@+id/question_1"
        android:padding="14dp"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="what is your favourate game"
        android:background="@drawable/buttons"
        android:layout_below="@+id/question_2"
        android:text="verify"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:padding="14dp"
        android:layout_margin="15dp"/>
</RelativeLayout>