<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerProductCategoryActivity"
    android:layout_centerVertical="true">

  <TextView
      android:id="@+id/slogan_category"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="27dp"
      android:text="Add new product"
      android:textAlignment="center"
      android:textSize="26sp"
      android:textColor="@color/colorPrimaryDark"
      android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/vegetables"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/market"
            android:padding="10dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Vegetables"
               android:textColor="@color/colorPrimaryDark"
               />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/grocery"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/grocery"
                android:padding="10dp"/>
            <TextView      android:textColor="@color/colorPrimaryDark"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grocery"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/Meat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/restaurnt"
                android:padding="10dp"/>
            <TextView      android:textColor="@color/colorPrimaryDark"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meat"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear_category_layout"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/dairy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/milk"
                android:padding="10dp"/>
            <TextView      android:textColor="@color/colorPrimaryDark"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dairy"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/medical"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pharmacy"
                android:padding="10dp"/>
            <TextView      android:textColor="@color/colorPrimaryDark"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Store"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/toy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/toy"
                android:padding="10dp"/>
            <TextView      android:textColor="@color/colorPrimaryDark"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toy shop"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear2_category_layout"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/tech"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tech"
                android:padding="10dp"/>
            <TextView      android:textColor="@color/colorPrimaryDark"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech Shop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/Sweats"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ecommerce"
                android:padding="10dp"/>
            <TextView      android:textColor="@color/colorPrimaryDark"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweats"/>
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>